{% extends '::base.html.twig' %}

	{% block title %}Liste des partenaires{% endblock %}

	{% block body %}

		<div class="container">

	        <div class="row">
	            <div class="box">
	                <div class="col-lg-12">
	                    <hr>
		                    <h2 class="intro-text text-center">
		                        <strong>Liste des partenaires {% if listPartnerForOneProject is not null and listPartnerForOneProject is not empty %} : {{ project.name|upper }}{% endif %}</strong>
		                    </h2>
	                    <hr>											
                       
                        	{% if listPartnerForOneProject is not null and listPartnerForOneProject is not empty %}
                                {% for partner in listPartnerForOneProject %}
                                    {% for img in partner.image %}	                   
					                    <img class="img-responsive img-border img-left" style="height:180px;width:280px;margin-bottom:15px;margin-left:5px;" src="{{ asset('uploads/images/'~ img.filename) }}" alt="">
					                {% endfor %}
					                <hr class="visible-xs">	                                    
                                        <p>{{ partner.name|upper }}</p>
                                        <p>{{ partner.adress ~' '~ partner.city|capitalize ~' '~ partner.postcode}}</p>
                                        <p>{{ partner.job|capitalize}}</p>
                                        <p>{{ partner.phone}}</p>                                                
                                        <p>{{ partner.website}}</p><br>                                                
                                        <p style="text-align: justify;">{{ partner.description}}</p><br>
                                        <hr/>
                                {% endfor %}                                                           
                            {% else %}  
                                {% for partner in listPartnersCompany %}
                                    {% for img in partner.image %}                     
                                        <img class="img-responsive img-border img-left" style="height:180px;width:280px;margin-bottom:15px;margin-left:5px;" src="{{ asset('uploads/images/'~ img.filename) }}" alt="">
                                    {% endfor %}
                                    <hr class="visible-xs">                                     
                                        <p>{{ partner.name|upper }}</p>
                                        <p>{{ partner.adress ~' '~ partner.city|capitalize ~' '~ partner.postcode}}</p>
                                        <p>{{ partner.job|capitalize}}</p>
                                        <p>{{ partner.phone}}</p>                                                
                                        <p>{{ partner.website}}</p><br>                                                
                                        <p style="text-align: justify;">{{ partner.description}}</p><br>
                                        <hr/>                                                           
                                {% endfor %}
                            {% endif %}                                                                                    
                    </div>
                </div>
            </div>
        </div>

	{% endblock %}

				                
	
{% extends '::base.html.twig' %}

	{% block title %}Disponibilités{% endblock %}

	{% block thematic %} 

		<div id="wrapper">

        <!-- Sidebar -->
	        <div id="sidebar-wrapper" style="margin-top:20px;">
	            <ul class="sidebar-nav">
	                <li class="sidebar-brand">
	                    <a href="#">
	                        Projets en cours
	                    </a>
	                </li>	                
	                {{ render(controller('FrontOfficeBundle:Project:list')) }}
	            </ul>
	        </div>

			<div id="page-content-wrapper">
	            <div class="container-fluid">

	{% endblock %}

	{% block body %}		

			        <div class="row">
			            <div class="box">
			                <div class="col-lg-12" style="margin-bottom:35px;">
			                    <hr>
				                    <h2 class="intro-text text-center">
				                        <strong>{{ project.name|upper }}</strong>
				                    </h2>
			                    <hr>
			                    <h3>                  
		                            <div class="col-md-3" style="margin-bottom:15px;border:solid 1px black;border-radius:38px;background-color: rgb(244, 215, 66);text-align:center;margin-top:35px;margin-left:255px;">Total des appartements : {{ nbrApartmentsTotal }}
		                            </div>
		                            <div class="col-md-3" style="margin-bottom:15px;border:solid 1px black;border-radius:38px;background-color: rgb(244, 215, 66);text-align:center;margin-top:35px;margin-left:255px;">{% if nbrApartments <= 1 %}Disponible : {% else %} Disponibles : {% endif %}{{ nbrApartments }}
		                            </div><br>                       
		                        </h3> 			                    
			                </div>

			                
			               	{% if listApartments is not null and  listApartments is not empty %}
							    <div class="row">
									<div class="col-md-12">
							            <div class="panel panel-primary">
							                <div class="panel-heading">
							                    <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Liste des appartements disponibles</h3>
							                </div>
							                <div class="panel-body">
							                    <div class="table-responsive">
							                        <table class="table table-bordered table-hover table-striped">
							                            <thead>
							                                <tr>
							                                    <th>Numéro</th>
							                                    <th>Nbr pièces</th>
							                                    <th>Surface</th>
							                                    <th>Prix €</th>
							                                    <th>Prix CFA</th>
							                                    <th>Etage</th>
							                                    <th>Commentaire</th>
							                                    				                                    
							                                </tr>
							                            </thead>
							                            <tbody>
							                                {% for appart in listApartments %}
							                                	<tr>
								                                    <td>{{ appart.id }}</td>
								                                    <td>{{ appart.nbrooms }}</td>
								                                    <td>{{ appart.surface }} m²</td>
								                                    <td>{{ appart.price }} €</td>
								                                    <td>{{ appart.priceCFA }} CFA</td>
								                                    <td>{{ appart.etage }}</td>
								                                    <td style="text-align: justify;">{{ appart.comment}}</td>                           
							                                	</tr>                                            
								                            {% endfor %}
							                            </tbody>
							                        </table>
							                    </div>					                    
							                </div>
							            </div>
							        </div>
							    </div>
					    	{% endif %}		    	

					    	
				        </div>
			    	</div>

				</div>
			</div>

		</div>		

	{% endblock %}

	
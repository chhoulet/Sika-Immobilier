{% extends '::baseLogin.html.twig' %}

	{% block title %}Nouveau mot de passe{% endblock %}

	{% block body %}

		<div class="container">

			<div class="row">
				<div class="col-lg-12" style="height:270px;width:580px;margin-top:125px;margin-left:300px;background-color: rgb(201, 219, 184);">
					<h2 style="text-align: center;margin-top: 25px;margin-bottom:45px;">Identifiez-vous :</h2>			  
					  <!-- Trigger the modal with a button -->
					<div style="text-align: center;">
						<button type="button" class="btn btn-success btn-lg" id="myBtn">Demande de nouveau mot de passe :</button>
					</div>

			          <!-- Modal -->
					<div class="modal fade" id="myModal" role="dialog">
					    <div class="modal-dialog">
					    
					        <!-- Modal content-->
						    <div class="modal-content">
						    	<div class="modal-header">
						    		<p>Nouveau mot de passe</p>
						    	</div>
						    	<div class="modal-body">
							    	{% block fos_user_content %}
										<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
										    <div style="margin-top:20px;margin-bottom:20px;">
										        <label for="username">Username :</label><br>
										        <input type="text" id="username" name="username" required="required" class="form-control" />
										    
										        <input type="submit" class="btn btn-success" style="margin-top:20px;margin-bottom:20px;margin-left:250px;"/>
										    </div>
										   
										</form>
									{% endblock fos_user_content %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>

	{% endblock %}